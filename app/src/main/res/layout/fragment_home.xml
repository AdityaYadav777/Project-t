<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEDED"
    tools:context=".fragments.HomeFrag">



            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_marginTop="-15dp"

                android:elevation="5dp"
                app:cardCornerRadius="20dp"

                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/red">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="75dp"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.8"
                            android:text="Student"
                            android:visibility="gone"
                            android:id="@+id/type"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="75dp"
                            android:layout_marginBottom="3dp"
                            android:alpha="0.8"
                            android:background="@drawable/shape_btn2"
                            android:backgroundTint="@color/white"
                            android:id="@+id/typeDam"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/proDam"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <de.hdodenhof.circleimageview.CircleImageView

                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_margin="12dp"

                                    android:alpha="0.6"
                                    android:background="@drawable/shape_btn2"
                                    android:backgroundTint="#fff"
                                    android:scaleType="centerCrop"
                                    app:civ_border_width="1px" />
                            </com.facebook.shimmer.ShimmerFrameLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="21dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/baseline_person_24"
                                android:visibility="gone"
                                app:civ_border_color="#F3EFEF"
                                app:civ_border_width="2px" />

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/nameDam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="160dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/shape_btn2"
                                    android:backgroundTint="#fff"/>
                            </com.facebook.shimmer.ShimmerFrameLayout>

                            <TextView
                                android:id="@+id/myNameInHome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="14dp"
                                android:fontFamily="cursive"
                                android:text="Aditya Yadav"
                                android:textColor="@color/white"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/placeholder" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mySearchView"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="95dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/shape1">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/baseline_search_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:text="Search....."
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mySearchView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="-20000dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="-200000dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FDEEEE"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:elevation="22dp"
                                    app:cardCornerRadius="100dp"
                                    app:cardElevation="8dp">

                                    <RelativeLayout
                                        android:background="@color/white"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/painterCate"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitCenter"
                                            android:src="@mipmap/ic_launcher" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/painterCate"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="7dp"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Painter"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:elevation="22dp"
                                    app:cardCornerRadius="100dp"
                                    app:cardElevation="8dp">

                                    <LinearLayout
                                        android:background="@color/white"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/AcRepaireCate"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitCenter"
                                            android:src="@mipmap/ic_launcher" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="7dp"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Electrician"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:elevation="22dp"
                                    app:cardCornerRadius="100dp"
                                    app:cardElevation="8dp">

                                    <LinearLayout
                                        android:background="@color/white"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/labourCate"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitCenter"
                                            android:src="@mipmap/ic_launcher" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="7dp"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Raj Mistri"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:id="@+id/seeAll"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:elevation="22dp"
                                    app:cardCornerRadius="100dp"
                                    app:cardElevation="8dp">

                                    <LinearLayout
                                        android:background="@color/white"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView

                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="20dp"
                                            android:src="@drawable/baseline_arrow_forward_24" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="7dp"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="See ALL"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myRecHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/cardView1"
                android:layout_marginTop="5dp"
                />

<View
    android:layout_width="@dimen/_60sdp"
    android:layout_height="@dimen/_60sdp"
    android:layout_below="@id/myRecHome"/>

</RelativeLayout>