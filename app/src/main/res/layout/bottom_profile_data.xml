<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="20dp"
    android:background="#fff"
    android:layout_height="420dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/heartLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:padding="2dp"
            android:src="@drawable/heart"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Watchlist"
    android:layout_marginStart="80dp"
    android:layout_marginTop="28dp"
    android:textSize="21dp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:textColor="#8A8686"
            android:layout_marginEnd="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#4D000000"
            android:layout_marginTop="15dp"
            android:layout_marginStart="70dp"
            android:id="@+id/view1"
            android:layout_below="@+id/heartLogo"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/useraccount"
            android:layout_below="@+id/view1"
            android:layout_marginStart="23dp"
            android:layout_marginTop="24dp"
            android:id="@+id/logo2"
            app:tint="@color/red" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch to Recuriter"
            android:layout_below="@+id/view1"
            android:layout_marginStart="80dp"
            android:layout_marginTop="25dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/swAccount"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/swAccount"
            android:background="#4D000000"
            android:layout_marginTop="15dp"
            android:id="@+id/view2"
            android:layout_marginStart="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:textColor="#8A8686"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"/>

<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/shield"
    android:layout_below="@+id/view2"
    android:layout_marginStart="25dp"
    android:layout_marginTop="30dp"
    android:id="@+id/logo3"
    app:tint="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy/Security"
            android:layout_below="@+id/view2"
            android:layout_marginStart="80dp"
            android:layout_marginTop="26dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/privacyText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:textColor="#8A8686"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/privacyText"
            android:background="#4D000000"
            android:layout_marginTop="15dp"
            android:layout_marginStart="70dp"
            android:id="@+id/view3"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/privacylaw"
            android:layout_below="@id/view3"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            app:tint="#F46363" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Privacy Policy"
          android:layout_below="@+id/view3"
          android:layout_marginStart="80dp"
          android:layout_marginTop="26dp"
          android:textSize="21dp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:textColor="#8A8686"
            android:layout_marginTop="220dp"
            android:id="@+id/policyText"
            android:layout_marginEnd="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/policyText"
            android:background="#4D000000"
            android:layout_marginTop="15dp"
            android:layout_marginStart="70dp"
            android:id="@+id/view4"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/feedback"
            android:layout_below="@+id/view4"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/view4"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:id="@+id/feedbackBtn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:textColor="#8A8686"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/feedbackBtn"
            android:background="#4D000000"
            android:layout_marginTop="15dp"
            android:id="@+id/view5"
            android:layout_marginStart="70dp"/>





<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Version 24.3.1"
android:layout_below="@id/view5"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>